Sub DeleteSpaces()

    'Declare variables
        Dim MyRange As Range
        Dim MyCell As Range
        
    'Save Workbook before changing cells
        Select Case MsgBox("Can't Undo this action.  " & _
                            "Save Workbook First?", vbYesNoCancel)
            Case Is = vbYes
            ThisWorkbook.Save
            Case Is = vbCancel
            Exit Sub
        End Select
        
    'Define target Range
        Set MyRange = Selection
        
    'Loop through range
        For Each MyCell In MyRange
        
    'Delete Spaces
            If Not IsEmpty(MyCell) Then
                MyCell = Trim(MyCell)
            End If
            
    'Move to the next cell in the range
        Next MyCell
End Sub
